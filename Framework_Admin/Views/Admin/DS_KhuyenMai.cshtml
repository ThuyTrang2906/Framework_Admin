                                                    <th>Ngày kết thúc</th>
                                                    <th>Tình trạng</th>
                                                    <th>Hành động</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var item in Model)
                                                {
                                                    <tr>
                                                        <td>@item.Makm</td>
                                                        <td>@item.Noidung</td>
                                                        <td>@item.Phantram</td>
                                                        <td>chưa nhập</td>
                                                        <td>@item.Ngaybd</td>
                                                        <td>@item.Ngaykt</td>
                                                        <td>CHƯA LÀM</td>
                                                        <td style="display: flex;">
                                                            <a href="/Admin/CapNhat_KM?Id=@item.Makm" class="btn btn-primary" style=" justify-content: center;">Sửa</a>
                                                            <a href="/Admin/Xoa_KM?Id=@item.Makm" class="btn btn-danger" style=" justify-content: center;">Xóa</a>
                                                        </td>
                                                    </tr>
                                                }
                                                   

